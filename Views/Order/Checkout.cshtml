@model SCoffee.Models.Domain.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Nhập thông tin đặt hàng</h2>
                <form asp-action="Checkout" method="post">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Tên :</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Nhập tên của bạn" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Họ Lót :</label>
                        <input asp-for="LastName" class="form-control" placeholder="Nhập họ lót của bạn" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email :</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Số Điện Thoại :</label>
                        <input asp-for="Phone" type="tel" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Địa Chỉ Nhận Hàng:</label>
                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ nhận hàng" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Đặt hàng</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
