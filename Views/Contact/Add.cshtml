

@model SCoffee.Models.Domain.Contact

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Liên hệ với tôi</h2>
                <form asp-action="Checkout" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên :</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email :</label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label">Thông điệp :</label>
                        <input asp-for="Message" type="tel" class="form-control" placeholder="Nhập thông điệp của bạn" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Gửi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




