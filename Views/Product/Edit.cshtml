@model SCoffee.Models.Domain.Product

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary">Sửa sản phẩm</h2>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Giá</label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea asp-for="Detail" class="form-control"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Ảnh hiện tại</label>
                        <img src="~/images/@Model.ImageUrl" width="150" height="150" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Chọn ảnh mới</label>
                        <input asp-for="ImageUrl" type="file" name="imageFile" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="IsTrendingProduct" class="form-check-input" />
                            <label class="form-check-label">Sản phẩm hot</label>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="ListProduct" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



        
