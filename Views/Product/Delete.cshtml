@model SCoffee.Models.Domain.Product

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="max-width: 400px; border-radius: 12px;">
        <div class="card-header bg-danger text-white text-center" style="border-radius: 12px 12px 0 0;">
            <h4 class="fw-bold">Xóa sản phẩm</h4>
        </div>
        <div class="card-body text-center p-4">
            <p class="fs-5">Bạn có chắc muốn xóa sản phẩm <strong>@Model.Name</strong>?</p>
            <form asp-action="DeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4 py-2 fw-bold" style="border-radius: 8px;">
                        <i class="fas fa-trash-alt me-2"></i> Xóa
                    </button>
                    <a asp-action="ListProduct" class="btn btn-secondary px-4 py-2 fw-bold" style="border-radius: 8px;">
                        <i class="fas fa-times me-2"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
