@model SCoffee.Models.Domain.Product

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary fw-bold">Thêm sản phẩm</h2>
                <form asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label class="form-label">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giá</label>
                        <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá sản phẩm" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea asp-for="Detail" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hình ảnh</label>
                        <input asp-for="ImageUrl" type="file" name="imageFile" class="form-control" placeholder="Nhập URL hình ảnh" required />
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="IsTrendingProduct" class="form-check-input" />
                        
                        <label class="form-check-label">Sản phẩm hot</label>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="ListProduct" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Thêm</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
   
</div>


       
